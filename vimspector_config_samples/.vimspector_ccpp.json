# comment (remove it when you use this file): you must have such a file in your project root (i think) and also build your program with debug symbols, Actually with '-g' option in gcc.
{
	"configurations": {
		"Launch": {
			"adapter": "vscode-cpptools",
			"configuration": {
				"request": "launch",
				"program": "<executable_path>",
				"cwd": "<workspace-path>",
				"externalConsole": true,
				"MIMode": "debugger server like gdb, lldb"
			}
		}
	}
}

